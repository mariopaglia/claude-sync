{
  "name": "claude-config-sync",
  "version": "1.0.1",
  "description": "Sync your Claude Code configuration across machines using GitHub Gists",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "claude-config-sync": "dist/index.js",
    "ccs": "dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "claude",
    "claude-code",
    "sync",
    "config",
    "gist",
    "dotfiles",
    "backup"
  ],
  "author": "Mario Paglia <mpagliajr@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mariopaglia/claude-sync.git"
  },
  "bugs": {
    "url": "https://github.com/mariopaglia/claude-sync/issues"
  },
  "homepage": "https://github.com/mariopaglia/claude-sync#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@inquirer/prompts": "^7.0.0",
    "chalk": "^5.4.0",
    "commander": "^13.0.0",
    "diff": "^7.0.0",
    "ora": "^8.0.0"
  },
  "devDependencies": {
    "@types/diff": "^7.0.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
